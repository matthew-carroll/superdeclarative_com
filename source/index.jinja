    <script>
      var demoVideos = [
        "videos/demo_candlestick-chart.mp4",
        "videos/demo_facepile.mp4",
        "videos/demo_nest-protect.mp4",
      ];
      var demoIndex = 0;

      playVideo();
      addEventListener("load", playVideo);

      var hireMeModal = document.getElementById("hireMeModal");
      hireMeModal.addEventListener("click", (e) => {
        closeHireMeModal();
      });

      var hireMePopup = document.getElementById("hireMePopup");
      hireMePopup.addEventListener("click", (e) => {
        console.log("stopClickEvent!: ", e);
        e.stopPropagation();
      });

      var hireMeForm = document.getElementById("hireMeForm");
      hireMeForm.addEventListener("submit", (e) => {
        e.preventDefault();
        submitHireMeModal();
      });

      function playVideo() {
        var demoVideo = document.getElementById("demoVideo");

        var demoVideoSource = document.getElementById("demoVideoSource");
        demoVideoSource.setAttribute("src", demoVideos[demoIndex]);

        demoVideo.load();
        demoVideo.play();
      }

      function previousDemo() {
        demoIndex -= 1;
        if (demoIndex < 0) {
          demoIndex = demoVideos.length - 1;
        }

        playVideo();
      }

      function nextDemo() {
        demoIndex += 1;
        if (demoIndex >= demoVideos.length) {
          demoIndex = 0;
        }

        playVideo();
      }

      function openHireMeModal() {
        var modal = document.getElementById("hireMeModal");
        modal.classList.remove("hidden");
      }

      function submitHireMeModal() {
        var hasError = false;

        var nameField = document.getElementById("name");
        var name = nameField.value;
        if (name.trim().length == 0) {
          nameField.classList.remove("border-slate-300");
